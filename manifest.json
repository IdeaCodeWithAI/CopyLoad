{
  "manifest_version": 3,
  "name": "CopyLoad",
  "version": "1.1.1",
  "description": "Lưu trữ và quản lý text đã copy",
  "permissions": [
    "storage",
    "contextMenus",
    "clipboardRead",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "CopyLoad"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 